@model IEnumerable<FileGoat.Models.Repo>

@{
    ViewData["Title"] = "Repos";
}

<div class="text-center">
    <h2 class="display-4 my-3">Manage Repositories</h2>
</div>
<div class="container">
    <div class="row">
        <div class="d-flex mb-3 justify-content-around flex-wrap">
            @foreach (var item in Model)
            {
                <div class="card mx-2 my-2">
                    <div class="card-header">
                        @Html.DisplayFor(model => item.Name)
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <p class="mt-3">
            <a asp-action="Create" class="btn btn-primary">Create New Repository</a>
        </p>
    </div>
</div>